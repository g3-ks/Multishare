<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/enter_message"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColor="@android:color/black" >
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="previewMessage"
        android:text="@string/preview"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:background="@drawable/button_selector" />

    <CheckBox
        android:id="@+id/checkBoxFacebook"
        android:text="Post to Facebook"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_gravity="center" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        />

    <CheckBox
        android:id="@+id/checkBoxTwitter"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Post to Twitter"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxLinkedIn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Post to LinkedIn"
        android:textSize="20sp" />

</LinearLayout>